<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alt_background_shadow"
    tools:context=".WaitLobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            app:srcCompat="@drawable/waiting_room" />

     <LinearLayout
        android:layout_width="360sp"
        android:layout_height="580sp"
        android:gravity="center_horizontal"
         android:background="@drawable/creme_tall_rectange"
        android:orientation="vertical">
    </LinearLayout>
        <FrameLayout
            android:id="@+id/wait_lobby_participant_frame_layout"
            android:name="com.ift604.bingo.WaitLobbyParticipantListFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginTop="8sp">
            <Button
                android:id="@+id/wait_lobby_cancel_button"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_gravity="start|left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="0.2"
                android:textColor="#363636"
                android:background="@drawable/btn_white_rounded_contour"
                android:textSize="16sp"
                android:text="@string/quit" />

            <Space  android:layout_width="1dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/wait_lobby_start_button"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_weight="0.3"
                android:layout_gravity="right|end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#feffec"
                android:background="@drawable/black_btn"
                android:textSize="16sp"
                android:text="@string/start" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>