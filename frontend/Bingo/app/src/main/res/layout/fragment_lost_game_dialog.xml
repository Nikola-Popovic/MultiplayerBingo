<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@null"
    android:layout_height="wrap_content"
    tools:context=".LostGameDialogFragment">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/big_rounded_square"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#363636"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Il y a un gagnant ! " />

            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#363636"
                android:textSize="24sp"
                android:id="@+id/winner_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#feffec"
            android:background="@drawable/black_btn"
            android:textSize="16sp"
            android:id="@+id/lose_dialog_confirmation_button"
            android:text="OK" />

    </LinearLayout>

</FrameLayout>