<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bingo_game_background"
    android:id="@+id/main_screen"
    tools:context=".fel.game.GameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/previous_numbers"
            android:textColor="@color/colorWhite"
            android:textScaleX="1.3"
            android:textSize="22dp" />

        <FrameLayout
            android:id="@+id/previous_number_frame_layout"
            android:layout_width="349dp"
            android:layout_height="78dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">


        </FrameLayout>

        <FrameLayout
            android:id="@+id/player_card_frame_layout"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/player_game_background_image"
            app:layout_constraintStart_toStartOf="@+id/player_game_background_image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bingo_button"
            android:layout_width="188dp"
            android:layout_height="101dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bingo_button"
            android:enabled="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/previous_number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@null"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>